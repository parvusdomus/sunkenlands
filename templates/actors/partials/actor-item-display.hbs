<li class="item collapsible collapsed" data-item-id="{{item._id}}" draggable="true">
	<div class="item-row">
		<div class="item-name item-action item-tooltip" role="button" data-action="use">
			<img class="item-image rollable" src="{{item.img}}" alt="{{item.name}}">
			<div class="name name-stacked item-rollable">
				<span class="title">{{item.name}}</span>
			</div>
		</div>

		<div class="item-detail item-controls">
			{{#if (eq @root.actor.type "character")}}
			<a class="item-control item-favorite">
				{{#if item.system.favorite}}
				<i class='fas fa-star'></i>
				{{else}}
				<i class='fas fa-star item-unequipped'></i>
				{{/if}}
			</a>
			{{/if}}
			{{#if (eq item.type (or "equipment" "weapon"))}}
			<a class="item-control item-equip">
				{{#if item.system.equipped}}
				<i class="fas fa-hand"></i>
				{{else}}
				<i class="fas fa-hand item-unequipped"></i>
				{{/if}}
			</a>
			{{/if}}
			<a class="item-control item-edit" title="Edit"><i class="fas fa-edit"></i></a>
			<a class="item-control item-delete" title="Delete"><i class="fas fa-trash"></i></a>
		</div>
	</div>
</li>