<form class="{{cssClass}} flexcol" autocomplete="off">
	{{> "sunken.item-header" }}

	<section class="sheet-body flexrow">
		<div class="details-sidebar">
			<div class="form-group">
				<label>{{localize "SUNKEN.BonusToHit"}}</label>
				<div class="form-fields">
					<input type="number" name="system.bonus" value="{{system.bonus}}" min="0" data-dtype="Number" />
				</div>
			</div>
			<div class="form-group">
				<label>{{localize "SUNKEN.Damage"}}</label>
				<div class="form-fields">
					<input type="text" name="system.damage" value="{{system.damage}}" />
				</div>
			</div>
			<div class="form-group">
				<label>{{localize "SUNKEN.Type"}}</label>
				<select name="system.type">
					{{selectOptions config.weaponTypes selected=system.type }}
				</select>
			</div>
		</div>
		<div>
			{{editor descriptionHTML target="system.description" button=true editable=editable engine="prosemirror" collaborate=false}}
		</div>
	</section>
</form>