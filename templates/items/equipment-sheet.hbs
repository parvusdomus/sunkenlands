<form class="{{cssClass}} flexcol" autocomplete="off">
	{{> "sunken.item-header" }}

	<section class="sheet-body flexrow">
		<div class="details-sidebar">
			<div class="form-group">
				<label>{{localize "SUNKEN.Armor"}}</label>
				<div class="form-fields">
					<input type="number" name="system.armor" value="{{system.armor}}" min="0" data-dtype="Number" />
				</div>
			</div>
			<div class="form-group">
				<label>{{localize "SUNKEN.Penalty"}}</label>
				<div class="form-fields">
					<input type="number" name="system.penalty" value="{{system.penalty}}" min="0" data-dtype="Number" />
				</div>
			</div>
			<div class="form-group">
				<label>{{localize "SUNKEN.Type"}}</label>
				<select name="system.type">
					{{selectOptions config.armorTypes selected=system.type }}
				</select>
			</div>
		</div>
		<div>
			{{editor descriptionHTML target="system.description" button=true editable=editable engine="prosemirror" collaborate=false}}
		</div>
	</section>
</form>